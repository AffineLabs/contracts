{
  "name": "alpine-smart-contracts",
  "version": "0.0.1",
  "description": "Alpine Ethereum and Matic smart contracts",
  "main": "index.js",
  "scripts": {
    "test": "ts-node scripts/forge.ts test",
    "test-all": "yarn test --l1 --l2 --anchor",
    "snap": "ts-node scripts/forge.ts snapshot",
    "snap-all": "yarn snap --l1 --l2 --anchor",
    "test-hh": "hardhat test",
    "clean": "forge clean",
    "script": "ts-node scripts/fork.ts",
    "build": "forge build",
    "build-hh": "hardhat compile",
    "lint": "solhint src/**/*.sol",
    "lint:fix": "solhint --fix src/**/*.sol",
    "format": "prettier --check \"**/*.{ts,js,sol}\"",
    "format:fix": "prettier --write \"**/*.{ts,js,sol}\"",
    "postinstall": "yarn build && yarn build-hh"
  },
  "author": "Alpine",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/hardhat-defender": "^1.6.0",
    "@openzeppelin/hardhat-upgrades": "^1.16.1",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.2.18",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.2",
    "chai": "^4.3.4",
    "commander": "^9.0.0",
    "concurrently": "^7.0.0",
    "defender-admin-client": "^1.14.0",
    "defender-base-client": "^1.14.0",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.5.2",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "hardhat": "^2.9.1",
    "hardhat-abi-exporter": "^2.8.0",
    "hardhat-change-network": "^0.0.7",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.3.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.0.0",
    "typechain": "^6.0.5",
    "typescript": "^4.3.2",
    "yarn-upgrade-all": "^0.5.4"
  },
  "dependencies": {
    "@certusone/wormhole-sdk": "^0.1.4",
    "@improbable-eng/grpc-web-node-http-transport": "^0.15.0",
    "@opengsn/contracts": "^2.2.5",
    "@openzeppelin/contracts": "^4.4.2",
    "@openzeppelin/contracts-upgradeable": "^4.4.2",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "axios": "^0.21.4",
    "forge-std": "https://github.com/Multiplyr/forge-std.git#0a0ab7e",
    "solmate": "npm:@rari-capital/solmate@6.2.0"
  }
}
