{
  "name": "alpine-smart-contracts",
  "version": "0.0.1",
  "description": "Alpine Ethereum and Matic smart contracts",
  "main": "index.js",
  "scripts": {
    "test": "dapp test",
    "test-hh": "hardhat test",
    "clean": "dapp clean",
    "script": "hardhat run",
    "build": "dapp build --optimize",
    "build-hh": "hardhat compile",
    "abi": "ts-node scripts/build-abi.ts",
    "types": "yarn typechain --target ethers-v5 --out-dir typechain/ ./abi/*.abi",
    "lint": "solhint src/**/*.sol",
    "lint:fix": "solhint --fix src/**/*.sol",
    "format": "prettier --check \"**/*.{ts,js,sol}\"",
    "format:fix": "prettier --write \"**/*.{ts,js,sol}\"",
    "snap": "dapp check-snapshot",
    "snap:fix": "dapp snapshot",
    "postinstall": "yarn build && yarn build-hh"
  },
  "author": "Alpine",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^2.1.3",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.2.18",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.2",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.5.2",
    "glob": "^7.2.0",
    "hardhat": "^2.7.0",
    "hardhat-abi-exporter": "^2.8.0",
    "hardhat-change-network": "^0.0.7",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.3.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.0.0",
    "typechain": "^6.0.5",
    "typescript": "^4.3.2",
    "yarn-upgrade-all": "^0.5.4"
  },
  "dependencies": {
    "@certusone/wormhole-sdk": "^0.1.4",
    "@improbable-eng/grpc-web-node-http-transport": "^0.15.0",
    "@openzeppelin/contracts": "^4.4.2",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "axios": "^0.21.4",
    "solmate": "npm:@rari-capital/solmate@6.2.0"
  }
}
