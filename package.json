{
  "name": "alpine-smart-contracts",
  "version": "0.0.1",
  "description": "Alpine Ethereum and Matic smart contracts",
  "main": "index.js",
  "scripts": {
    "test": "eval $(egrep -v '^#' .env) forge test",
    "snap": "eval $(egrep -v '^#' .env) forge snapshot",
    "test-hh": "ts-node scripts/fork.ts test",
    "clean": "forge clean",
    "script": "ts-node scripts/fork.ts script",
    "build": "forge build",
    "build-hh": "hardhat compile",
    "lint": "solhint src/**/*.sol",
    "lint:fix": "solhint --fix src/**/*.sol",
    "format": "prettier --check \"**/*.{ts,js,sol}\"",
    "format:fix": "prettier --write \"**/*.{ts,js,sol}\"",
    "postinstall": "yarn build-hh",
    "prepare": "husky install"
  },
  "author": "Alpine",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
