{
  "name": "alpine-smart-contracts",
  "version": "0.0.1",
  "description": "Alpine Ethereum and Matic smart contracts",
  "main": "index.js",
  "scripts": {
    "test": "forge test",
    "snap": "forge snapshot",
    "cov": "forge coverage",
    "test-hh": "ts-node scripts/fork.ts test",
    "clean": "forge clean",
    "script": "ts-node scripts/fork.ts script",
    "build": "hardhat compile && forge install",
    "build-hh": "hardhat compile",
    "lint": "solhint '{src,script}/**/*.sol'",
    "lint:fix": "solhint --fix src/**/*.sol",
    "format": "prettier --check \"**/*.{ts,js}\" && forge fmt --check",
    "format:fix": "prettier --write \"**/*.{ts,js}\" && forge fmt",
    "test-doc": "yarn ts-node scripts/doc-gen/gen-test-doc.ts",
    "cov-doc": "forge coverage --report lcov && genhtml -o docs/coverage lcov.info",
    "gen-docs": "yarn test-doc && yarn cov-doc"
  },
  "author": "Alpine",
  "license": "MIT",
  "devDependencies": {
    "@aave/core-v3": "^1.18.0",
    "@certusone/wormhole-sdk": "^0.1.4",
    "@improbable-eng/grpc-web-node-http-transport": "^0.15.0",
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@opengsn/contracts": "^2.2.5",
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/contracts-upgradeable": "^4.4.2",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.2.18",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "@uniswap/v3-periphery": "https://github.com/Uniswap/v3-periphery.git#0.8",
    "axios": "^0.26.1",
    "chai": "^4.3.4",
    "commander": "^9.0.0",
    "concurrently": "^7.0.0",
    "defender-admin-client": "^1.14.0",
    "defender-base-client": "^1.14.0",
    "dotenv": "^16.0.0",
    "erc721a": "^4.2.3",
    "ethers": "^5.6.9",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "handlebars": "^4.7.7",
    "hardhat": "^2.9.2",
    "hardhat-abi-exporter": "^2.8.0",
    "hardhat-change-network": "^0.0.7",
    "husky": "^8.0.0",
    "prettier": "^2.3.1",
    "solady": "^0.0.27",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-ast": "^0.4.38",
    "solidity-docgen": "^0.6.0-beta.32",
    "solmate": "npm:@rari-capital/solmate@6.4.0",
    "ts-node": "^10.0.0",
    "typechain": "^8.0.0",
    "typescript": "^4.3.2",
    "yarn-upgrade-all": "^0.7.0"
  },
  "dependencies": {
    "@chainlink/contracts-ccip": "^0.7.6"
  }
}
